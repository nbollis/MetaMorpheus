<UserControl x:Class="MetaMorpheusGUI.ChimeraAnalysisTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MetaMorpheusGUI"
             xmlns:guiFunctions="clr-namespace:GuiFunctions;assembly=GuiFunctions"
             xmlns:oxy="http://oxyplot.org/wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance guiFunctions:ChimeraAnalysisTabViewModel, IsDesignTimeCreatable=True}">
    <UserControl.Resources>
        <Style x:Key="ChimeraBottomButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SecondaryButtonColor}" />
            <Setter Property="Foreground" Value="{StaticResource TextColor2}" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="Padding" Value="8,4" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="MinWidth" Value="100" />
            <Setter Property="MinHeight" Value="32" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}" 
                                CornerRadius="4"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentColor}" />
                                <Setter Property="Foreground" Value="{StaticResource TextColor1}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />    <!-- MS1 plot -->
            <RowDefinition Height="5" />    <!-- Splitter -->
            <RowDefinition Height="*" />    <!-- MS2 plot -->
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Data Grid -->
        <DataGrid x:Name="chermicDataGrid" Grid.Column="0" AutoGenerateColumns="False" VerticalAlignment="Stretch" 
          ItemsSource="{Binding  ChimeraGroupViewModels}" SelectedItem="{Binding SelectedChimeraGroup}"
                  SelectionMode="Single" SelectionUnit="FullRow" HorizontalScrollBarVisibility="Disabled"
                  SelectedCellsChanged="ChermicDataGrid_OnSelectedCellsChanged"
                  ScrollViewer.CanContentScroll="True" IsReadOnly="True" Margin="0,0,0,0" 
                  CanUserDeleteRows="false" CanUserAddRows="false" Grid.Row="0" Grid.RowSpan="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="MS2 " Binding="{Binding Ms2ScanNumber}" Width="50" 
                            ElementStyle="{StaticResource DataGridCenteredCellStyle}" />
                <DataGridTextColumn Header="MS1 " Binding="{Binding OneBasedPrecursorScanNumber}" Width="50"
                            ElementStyle="{StaticResource DataGridCenteredCellStyle}" />
                <DataGridTextColumn Header="IDs" Binding="{Binding Count}" Width="30" 
                            ElementStyle="{StaticResource DataGridCenteredCellStyle}" />
                <DataGridTextColumn Header="Total Fragments" Binding="{Binding TotalFragments}" Width="100"
                            ElementStyle="{StaticResource DataGridCenteredCellStyle}"/>
                <DataGridTextColumn Header="Unique Fragments" Binding="{Binding UniqueFragments}" Width="110"
                            ElementStyle="{StaticResource DataGridCenteredCellStyle}"/>
                <DataGridTextColumn Header="DataFile" Binding="{Binding FileNameWithoutExtension}" Width="140"
                                    ElementStyle="{StaticResource DataGridCenteredCellStyle}"/>
                <DataGridTextColumn Header="Base Sequence Count" Binding="{Binding ProteinCount}" Width="60"
                            ElementStyle="{StaticResource DataGridCenteredCellStyle}"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Export -->
        <Grid Grid.Column="0" Grid.Row="5" HorizontalAlignment="Center" VerticalAlignment="Bottom">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="4">
                <ComboBox ItemsSource="{Binding ExportTypes}"  
                          SelectedItem="{Binding SelectedExportType}"
                          HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="10 0"/>
                <CheckBox Content="Use Letter" IsChecked="{Binding UseLetterOnly}" VerticalContentAlignment="Center" />
            </StackPanel>
            <UniformGrid Grid.Row="1" Columns="4" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Export MS1" Command="{Binding ExportMs1Command}" Style="{StaticResource ChimeraBottomButtonStyle}" />
                <Button Content="Export MS2" Command="{Binding ExportMs2Command}" Style="{StaticResource ChimeraBottomButtonStyle}" />
                <Button Content="Export Cov" Command="{Binding ExportSequenceCoverageCommand}" Style="{StaticResource ChimeraBottomButtonStyle}" />
                <Button Content="Export Legend" Command="{Binding ExportLegendCommand}" 
                        CommandParameter="{Binding ElementName=chimericResultDataGrid}" 
                        Style="{StaticResource ChimeraBottomButtonStyle}" />
            </UniformGrid>
        </Grid>

        <!--Moveable splitter-->
        <GridSplitter Grid.Column="1" Grid.Row="0" Grid.RowSpan="4"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      Background="Silver"
                      Width="2"/>

        <!-- MS1 Plot-->
        <oxy:PlotView x:Name="ms1ChimeraOverlaPlot" Grid.Row="0" Grid.Column="2"
                  FontSize="16" FontStretch="Expanded"
                  Margin="0 0 0 0" VerticalAlignment="Stretch" />
        
        <!-- Splitter between MS1 and MS2 plots -->
        <GridSplitter Grid.Row="1" Grid.Column="2"
                      Height="1"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Center"
                      Background="Gray"
                      ShowsPreview="True" />
        
        <!-- MS2 Plot -->
        <oxy:PlotView x:Name="ms2ChimeraPlot" Grid.Row="2" Grid.Column="2" 
                  FontSize="16" FontStretch="Expanded" VerticalAlignment="Stretch" />

        <!-- Sequence Coverage -->
        <Expander Grid.Row="3" Grid.Column="2" IsExpanded="False">
            <Expander.Header>
                <Label Content="Sequence Annotation" Margin="0 0 10 0" />
            </Expander.Header>
            <ScrollViewer HorizontalScrollBarVisibility="Visible" CanContentScroll="True"
                      VerticalScrollBarVisibility="Disabled"
                      HorizontalAlignment="Left">
                <Canvas x:Name="chimeraSequenceCanvas" />
            </ScrollViewer>
        </Expander>


        <Expander Grid.Column="2" Grid.Row="4" Header="Colorized Legend" IsExpanded="False">
            <local:ChimeraLegendControl x:Name="ChimeraLegendControlInTab"
                                    DataContext="{Binding ChimeraLegendViewModel}" Height="Auto" />
        </Expander>

        <DataGrid x:Name="chimericResultDataGrid" Grid.Column="2" Grid.Row="5" Grid.RowSpan="2"
          ItemsSource="{Binding SelectedChimeraGroup.ChimericPsms}"
          CanUserAddRows="False" CanUserDeleteRows="False" ScrollViewer.CanContentScroll="False" IsReadOnly="True" AutoGenerateColumns="False"
          HorizontalScrollBarVisibility="Disabled" >
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Proteoform" >
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Rectangle  Stroke="{Binding Color, Converter={local:OxyColorToColorBrushConverter}}"
                                Fill="{Binding Color, Converter={local:OxyColorToColorBrushConverter}}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="ID" Binding="{Binding Letter}" Width="Auto" />
                <DataGridTextColumn Header="Name" Binding="{Binding Psm.Name}" Width="Auto" />
                <DataGridTextColumn Header="Theoretical Mass" Binding="{Binding Psm.PrecursorMass}" Width="100"/>
                <DataGridTextColumn Header="Precursor Mz" Binding="{Binding Psm.PrecursorMz}" Width="80"/>
                <DataGridTextColumn Header="Mods" Binding="{Binding ModString}"></DataGridTextColumn>
                <DataGridTextColumn Header="PEP Q-Value" Binding="{Binding Psm.PEP_QValue, StringFormat=F3}" Width="60"
                            ElementStyle="{StaticResource DataGridCenteredCellStyle}"/>
                <DataGridTextColumn Header="MetaMorpheus Score" Binding="{Binding Psm.Score}" 
                            ElementStyle="{StaticResource DataGridCenteredCellStyle}" />
                <DataGridTemplateColumn Header="Protein">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Rectangle Stroke="{Binding ProteinColor, Converter={local:OxyColorToColorBrushConverter}}"
                             Fill="{Binding ProteinColor, Converter={local:OxyColorToColorBrushConverter}}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>

<UserControl x:Class="MetaMorpheusGUI.DatabaseConverterControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MetaMorpheusGUI"
             d:DataContext="{x:Static local:DatabaseConverterModel.Instance}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
        <Grid Margin="10" Background="{StaticResource BackgroundColor}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Description -->
            <Expander  Grid.Row="0" Header="Description and tips">
                <TextBlock TextWrapping="Wrap">
                    <TextBlock.Text>
                        Will take any number of input databases and write a new fasta database. 
                        If search results are present it will append those search results to the output database, useful for truncations from toppic. 
                        To only get a database of search results, do not load in a database
                    </TextBlock.Text>
                </TextBlock>
            </Expander>

            <!-- Upper region for file management -->
            <Grid Grid.Row="1" Margin="10" VerticalAlignment="Stretch"  >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- ListBox to display database Paths -->
                <StackPanel Orientation="Vertical" Grid.Column="0">
                    <Label Content="Databases"  />
                    <ListBox Name="DatabasePathListBox" HorizontalAlignment="Left" VerticalAlignment="Stretch" 
                     MinWidth="300" MinHeight="80"
                     Margin="10,10,0,0" ItemsSource="{Binding DatabasePaths}"
                     SelectedItem="{Binding SelectedDatabase}" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Target Decoy -->
                        <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal" Margin="5 0" >
                                <Label Content="Organism Specific Output?"  VerticalAlignment="Center" Margin="5 0" />
                                <CheckBox IsChecked="{Binding OrganismStratifiedDatabaseOutput}"  
                                          VerticalAlignment="Center" Margin="5 0" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="5 0" >
                                <Label Content="Generate Targets?              "  VerticalAlignment="Center" Margin="5 0" />
                                <CheckBox IsChecked="{Binding GenerateTargets}"  
                                          VerticalAlignment="Center" Margin="5 0" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="5 0" >
                                <Label Content="Generate Decoys?              "  VerticalAlignment="Center" Margin="5 0" />
                                <CheckBox IsChecked="{Binding GenerateDecoys}"  
                                          VerticalAlignment="Center" Margin="5 0" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="5 0" 
                                        IsEnabled="{Binding GenerateDecoys}">
                                <Label Content="Decoy Type                 " Margin="5 0" />
                                <ComboBox ItemsSource="{Binding DecoyTypes}" MinWidth="80"
                                          SelectedItem="{Binding SelectedDecoyType}"
                                          VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
                            </StackPanel>
                        </StackPanel>

                        <Button Grid.Column="1" Content="Remove" HorizontalAlignment="Right" VerticalAlignment="Top" Width="120" Height="30"
                                Margin="10" Command="{Binding RemoveDatabaseCommand}" />
                    </Grid>



                    
                </StackPanel>

                <!-- ListBox to display search result Paths -->
                <StackPanel Orientation="Vertical" Grid.Column="1">
                    <Label Content="Search Results (MetaMorpheus or TopPIC)"/>
                    <ListBox Name="SearchPathListBox" HorizontalAlignment="Left" VerticalAlignment="Stretch"
                     MinWidth="300" MinHeight="80"
                     Margin="10,10,0,0" ItemsSource="{Binding SearchResultPaths}"
                     SelectedItem="{Binding SelectedSearchResult}" />
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Search Result Parsing -->
                        <StackPanel Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Left" Margin="5 0">

                            <StackPanel Orientation="Horizontal" >
                                <Label Content="Append Search Results?" Margin="5 0"></Label>
                                <CheckBox  Margin="5 0" IsChecked="{Binding AppendSearchResults}" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" >
                                <Label Content="Filter to FDR?" Margin="5 0"></Label>
                                <CheckBox  Margin="60 0 0 0" IsChecked="{Binding FilterToFdr}" 
                                           VerticalAlignment="Center"/>
                            </StackPanel>

                            <StackPanel Orientation="Horizontal" Margin="5 0" HorizontalAlignment="Left"
                                        IsEnabled="{Binding FilterToFdr}">
                                <Label Content="FDR Cutoff" />
                                <local:DoubleTextBoxControl Text="{Binding FdrCutoff}"
                                                            MinWidth="40" Margin="52 0 0 0" VerticalContentAlignment="Center"
                                                            HorizontalContentAlignment="Center"/>
                            </StackPanel>

                        </StackPanel>


                        <Button Grid.Column="1" Content="Remove" HorizontalAlignment="Right" VerticalAlignment="Top" Width="120" Height="30"
                                Margin="10" Command="{Binding RemoveSearchResultCommand}" />
                    </Grid>
                </StackPanel>
            </Grid>

           

            <!-- export of database -->
            <StackPanel Grid.Row="2" VerticalAlignment="Bottom" >
                <StackPanel>
                    <Label Content="Output Path"></Label>
                    <TextBox Text="{Binding OutputDatabasePath, Mode=TwoWay}" HorizontalAlignment="Stretch"
                     Height="60" Margin="10" TextWrapping="WrapWithOverflow"></TextBox>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Convert to Fasta" HorizontalAlignment="Left" VerticalAlignment="Center" Width="120" Height="30"
                    Margin="10" Command="{Binding CreateSingleDatabaseCommand}" />

                    <Button Content="Clear Data" HorizontalAlignment="Left" VerticalAlignment="Center" Width="120" Height="30"
                    Margin="10" Command="{Binding ClearDataCommand}" />
                </StackPanel>

            </StackPanel>
        </Grid>
    </ScrollViewer>
    
</UserControl>

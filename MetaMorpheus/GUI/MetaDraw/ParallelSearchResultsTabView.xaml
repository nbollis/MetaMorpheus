<UserControl x:Class="MetaMorpheusGUI.ParallelSearchResultsTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MetaMorpheusGUI"
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:parallelSearch="clr-namespace:GuiFunctions.ViewModels.ParallelSearchTask;assembly=GuiFunctions"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance parallelSearch:ParallelSearchResultsTabViewModel, IsDesignTimeCreatable=True}">
    <DockPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" MinWidth="250" MaxWidth="500" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel: File Loading and Filters -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Results Directory Selection -->
                <DockPanel Grid.Row="0" LastChildFill="True" Margin="5 2">
                    <Label Content="Results Directory:" Width="110" />
                    <Button Content="Reset" HorizontalAlignment="Right" DockPanel.Dock="Right"
                            VerticalAlignment="Center" Width="40" Height="26"
                            IsEnabled="{Binding HasResults}"
                            Click="ResetResultsButton_Click" />
                    <Button Name="SelectResultsDirectoryButton" Content="Browse" HorizontalAlignment="Right" DockPanel.Dock="Right"
                            VerticalAlignment="Center" Width="50" Height="26" Margin="5 0"
                            Click="SelectResultsDirectoryButton_Click" />
                    <Label BorderThickness="1" ToolTip="{Binding DirectoryFilePath}">
                        <TextBlock Text="{Binding DirectoryFilePath}" TextTrimming="CharacterEllipsis" />
                    </Label>
                </DockPanel>

                <!-- Load Button -->
                <Border Grid.Row="1"  Margin="5 2" 
                        HorizontalAlignment="Right">
                    <DockPanel LastChildFill="False" Margin="0 0 0 2">
                        <Button Name="LoadResultsButton" Content="Load Results" Width="96" Height="28"
                                HorizontalAlignment="Right"
                                IsEnabled="{Binding HasResults}"
                                Click="LoadResultsButton_Click" />
                    </DockPanel>
                </Border>

                <!-- Filter Section -->
                <Expander Header="Filtering Options" Grid.Row="2" Margin="5 2"
                          BorderBrush="LightGray" BorderThickness="1">
                    <StackPanel>
                        <!-- Alpha and Min Tests Passed on same line -->
                        <Grid Margin="0 2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Content="Min Tests:" 
                                   ToolTip="Minimum number of statistical tests a database must pass" />
                            <local:IntegerTexBoxControl Grid.Column="1" Text="{Binding ResultsViewModel.MinTestPassedCount}" 
                                     Width="60" HorizontalAlignment="Left" VerticalContentAlignment="Center" />
                        </Grid>
                    </StackPanel>
                </Expander>

                <!-- Shared Plot Options Expander -->
                <Expander Grid.Row="3" Header="Plot Options" Margin="5 2" IsExpanded="True"
                          BorderBrush="LightGray" BorderThickness="1">
                    <local:SharedPlotOptionsControl DataContext="{Binding ResultsViewModel}" />
                </Expander>

                <!-- Database Results List -->
                <GroupBox Header="Database Results" Grid.Row="4" Margin="5 2">
                    <Grid>
                        <TabControl x:Name="ResultsTabControl" Background="White">
                            <TabControl.Resources>
                                <Style TargetType="TabItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TabItem">
                                                <Border x:Name="Border"
                                                        BorderThickness="1,1,1,0"
                                                        BorderBrush="Gainsboro"
                                                        CornerRadius="4,4,0,0"
                                                        Margin="2,0"
                                                        Height="{TemplateBinding Height}">
                                                    <Grid SnapsToDevicePixels="True" UseLayoutRounding="True">
                                                        <StackPanel Orientation="Horizontal"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    Margin="10,2">


                                                            <!-- Header Text -->
                                                            <ContentPresenter x:Name="ContentSite"
                                                                              VerticalAlignment="Center"
                                                                              HorizontalAlignment="Center"
                                                                              ContentSource="Header" />
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>

                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Border" Property="Background"
                                                                Value="LightSkyBlue" />
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="False">
                                                        <Setter TargetName="Border" Property="Background"
                                                                Value="{StaticResource BackgroundColor}" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TabControl.Resources>

                            <!-- All Filtered Databases Tab -->
                            <TabItem Header="All Filtered">
                                <DataGrid x:Name="DatabaseResultsDataGrid" 
                                          AutoGenerateColumns="False" 
                                          VerticalAlignment="Stretch" 
                                          ScrollViewer.CanContentScroll="True" 
                                          IsReadOnly="True" 
                                          CanUserDeleteRows="False" 
                                          CanUserAddRows="False" 
                                          SelectionMode="Single"
                                          ItemsSource="{Binding ResultsViewModel.FilteredDatabaseResults}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Organism" Binding="{Binding OrganismName}" Width="2*" MinWidth="80" />
                                        <DataGridTextColumn Header="Taxonomy" Binding="{Binding TaxonomyDisplay}" Width="*" MinWidth="80" />
                                        <DataGridTextColumn Header="Sig. Tests" Binding="{Binding StatisticalTestsPassed}" Width="60" 
                                                            ElementStyle="{StaticResource DataGridCenteredCellStyle}" />
                                        <!--<DataGridTextColumn Header="Comb. P" Binding="{Binding CombinedPValue, StringFormat=E2}" Width="70" 
                                                            ElementStyle="{StaticResource DataGridCenteredCellStyle}" />
                                        <DataGridTextColumn Header="Comb. Q" Binding="{Binding CombinedQValue, StringFormat=E2}" Width="70" 
                                                            ElementStyle="{StaticResource DataGridCenteredCellStyle}" />-->
                                    </DataGrid.Columns>
                                </DataGrid>
                            </TabItem>

                            <!-- Top N Results Tab -->
                            <TabItem Header="Top N for Selected Test">
                                <DataGrid x:Name="TopNResultsDataGrid" 
                                          AutoGenerateColumns="False" 
                                          VerticalAlignment="Stretch" 
                                          ScrollViewer.CanContentScroll="True" 
                                          IsReadOnly="True" 
                                          CanUserDeleteRows="False" 
                                          CanUserAddRows="False" 
                                          SelectionMode="Single"
                                          ItemsSource="{Binding ResultsViewModel.CurrentPlot.TopNResults}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Organism" Binding="{Binding OrganismName}" 
                                                            Width="*" MinWidth="80" />
                                        <DataGridTextColumn Header="Value" Binding="{Binding SelectedTestValue, StringFormat=F5}" Width="60" 
                                                            ElementStyle="{StaticResource DataGridCenteredCellStyle}" />
                                        <DataGridTextColumn Header="P-Value" Binding="{Binding SelectedTestPValue, StringFormat=e2}" Width="60" 
                                                            ElementStyle="{StaticResource DataGridCenteredCellStyle}" />
                                        <DataGridTextColumn Header="Q-Value" Binding="{Binding SelectedTestQValue, StringFormat=e2}" Width="60" 
                                                            ElementStyle="{StaticResource DataGridCenteredCellStyle}" />
                                        <DataGridTextColumn Header="Taxonomy" Binding="{Binding TaxonomyDisplay}" 
                                                            Width="*" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </TabItem>

                            <TabItem Header="Test Summary">
                                <DataGrid x:Name="TestSummaryDataGrid"
                                          AutoGenerateColumns="False"
                                          VerticalAlignment="Stretch"
                                          ScrollViewer.CanContentScroll="True"
                                          IsReadOnly="True"
                                          CanUserDeleteRows="False"
                                          CanUserAddRows="False"
                                          SelectionMode="Single"
                                          ItemsSource="{Binding ResultsViewModel.TestSummaries}"
                                          SelectedItem="{Binding ResultsViewModel.SelectedTestSummary, Mode=TwoWay}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Test" Binding="{Binding TestName}" Width="*"
                                                            MinWidth="100" />
                                        <DataGridTextColumn Header="Metric" Binding="{Binding MetricName}" Width="*"
                                                            MinWidth="80" />
                                        <DataGridTextColumn Header="Valid DBs" Binding="{Binding ValidDatabases}"
                                                            Width="65"
                                                            ElementStyle="{StaticResource DataGridCenteredCellStyle}" />
                                        <DataGridTextColumn Header="Sig. by P" Binding="{Binding SignificantByP}"
                                                            Width="65"
                                                            ElementStyle="{StaticResource DataGridCenteredCellStyle}" />
                                        <DataGridTextColumn Header="Sig. by Q" Binding="{Binding SignificantByQ}"
                                                            Width="65"
                                                            ElementStyle="{StaticResource DataGridCenteredCellStyle}" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </TabItem>
                        </TabControl>

                        <!-- Loading overlay -->
                        <Grid x:Name="LoadOverlay" 
                              Visibility="{Binding IsLoading, Converter={local:BooleanToVisibilityConverter}}"
                              Background="#80000000"
                              Panel.ZIndex="100">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ProgressBar IsIndeterminate="True" Width="120" Height="18" Margin="0,0,0,8"/>
                                <TextBlock Text="Loading..." Foreground="White" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </GroupBox>
            </Grid>

            <!-- Moveable splitter -->
            <GridSplitter Grid.Column="1" 
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="Silver"
                          Width="3"/>

            <!-- Right Panel: Plot Display as Tabs -->
            <Grid Grid.Column="2" Name="PlotDisplayGrid" Style="{StaticResource InternalGridStyle}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <local:SettingsButtonControl Grid.Row="0" Height="52" x:Name="SettingsButton"
                                             HorizontalAlignment="Left" VerticalAlignment="Top"
                                             Panel.ZIndex="1" SelectedTabIndex="5" />

                <!-- Plot Display Area with Tabs -->
                <TabControl x:Name="PlotTabControl" Grid.Row="0" 
                            SelectionChanged="PlotTabControl_SelectionChanged"
                            SelectedIndex="{Binding ResultsViewModel.CurrentPlotType, Converter={local:PlotTypeToIndexConverter}}"
                            Background="White">
                    <TabControl.Resources>
                        <Style TargetType="TabItem">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TabItem">
                                        <Border x:Name="Border"
                                                BorderThickness="1,1,1,0"
                                                BorderBrush="LightGray"
                                                CornerRadius="4,4,0,0"
                                                Margin="2,0"
                                                Padding="10,5">
                                            <ContentPresenter x:Name="ContentSite"
                                                              VerticalAlignment="Center"
                                                              HorizontalAlignment="Center"
                                                              ContentSource="Header" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="LightSkyBlue" />
                                            </Trigger>
                                            <Trigger Property="IsSelected" Value="False">
                                                <Setter TargetName="Border" Property="Background" Value="WhiteSmoke" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TabControl.Resources>

                    <!-- Manhattan Plot Tab -->
                    <TabItem Header="{Binding ResultsViewModel.ManhattanPlot.PlotTitle}">
                        <Border BorderBrush="LightGray" BorderThickness="1" Margin="5">
                            <Grid>
                                <oxy:PlotView x:Name="ManhattanPlotView" 
                                              Model="{Binding ResultsViewModel.ManhattanPlot.PlotModel}"
                                              FontSize="14" 
                                              FontStretch="Expanded" 
                                              VerticalAlignment="Stretch"
                                              HorizontalAlignment="Stretch"
                                              Margin="2" />
                            </Grid>
                        </Border>
                    </TabItem>
                    
                    <!-- Phylogenetic Tree Tab -->
                    <TabItem Header="{Binding ResultsViewModel.PhylogeneticTree.PlotTitle}">
                        <local:PhylogeneticTreeControl DataContext="{Binding ResultsViewModel.PhylogeneticTree}"
                                                       VerticalAlignment="Stretch" />
                    </TabItem>
                    
                    <!-- Statistical Test Detail Tab -->
                    <TabItem Header="{Binding ResultsViewModel.StatisticalTestDetail.PlotTitle}">
                        <local:StatisticalTestDetailControl DataContext="{Binding ResultsViewModel.StatisticalTestDetail}"
                                                            VerticalAlignment="Stretch" />
                    </TabItem>
                </TabControl>

                <!-- Export buttons overlay -->
                <StackPanel Grid.Row="0"  Orientation="Horizontal" 
                            HorizontalAlignment="Left" 
                            VerticalAlignment="Bottom"
                            Margin="10">
                    <Button Content="Export Data" 
                            Command="{Binding ResultsViewModel.CurrentPlot.ExportPlotDataCommand}"
                            Width="90" Height="26" 
                            Margin="0 0 5 0"
                            ToolTip="Export plot data to CSV" />
                    <Button Content="Export Plot" 
                            Command="{Binding ResultsViewModel.CurrentPlot.ExportPlotCommand}"
                            Width="90" Height="26" 
                            Margin="0 0 5 0"
                            ToolTip="Export plot to image file" />
                    <Button Content="Refresh" 
                            Command="{Binding ResultsViewModel.CurrentPlot.RefreshPlotCommand}"
                            Width="70" Height="26"
                            ToolTip="Refresh the plot" />
                </StackPanel>

                <!-- Status Message -->
                <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="0 1 0 0" Padding="5">
                    <TextBlock Text="{Binding StatusMessage}" 
                               FontStyle="Italic" Foreground="Gray" 
                               TextWrapping="Wrap" />
                </Border>
            </Grid>
        </Grid>
    </DockPanel>
</UserControl>

<UserControl x:Class="MetaMorpheusGUI.ParallelSearchResultsTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MetaMorpheusGUI"
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:parallelSearch="clr-namespace:GuiFunctions.ViewModels.ParallelSearchTask;assembly=GuiFunctions"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance parallelSearch:ParallelSearchResultsTabViewModel, IsDesignTimeCreatable=True}">
    <DockPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350" MinWidth="250" MaxWidth="500" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel: File Loading and Filters -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Results Directory Selection -->
                <DockPanel Grid.Row="0" LastChildFill="True" Margin="5 2">
                    <Label Content="Results Directory:" Width="110" />
                    <Button Content="Reset" HorizontalAlignment="Right" DockPanel.Dock="Right"
                            VerticalAlignment="Center" Width="40" Height="26"
                            IsEnabled="{Binding HasResults}"
                            Click="ResetResultsButton_Click" />
                    <Button Name="SelectResultsDirectoryButton" Content="Browse" HorizontalAlignment="Right" DockPanel.Dock="Right"
                            VerticalAlignment="Center" Width="50" Height="26" Margin="5 0"
                            Click="SelectResultsDirectoryButton_Click" />
                    <Label BorderThickness="1" ToolTip="{Binding DirectoryFilePath}">
                        <TextBlock Text="{Binding DirectoryFilePath}" TextTrimming="CharacterEllipsis" />
                    </Label>
                </DockPanel>

                <!-- Load Button -->
                <Border Grid.Row="1" BorderBrush="Black" BorderThickness="0,0,0,1" Margin="5 2">
                    <DockPanel LastChildFill="False" Margin="0 0 0 2">
                        <Button Name="LoadResultsButton" Content="Load Results" Width="100" Height="28"
                                IsEnabled="{Binding HasResults}"
                                Click="LoadResultsButton_Click" />
                    </DockPanel>
                </Border>

                <!-- Filter Section -->
                <GroupBox Header="Filters" Grid.Row="2" Margin="5 2" Padding="5">
                    <StackPanel>
                        <!-- Alpha and Min Tests Passed on same line -->
                        <Grid Margin="0 2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Label Grid.Column="0" Content="Alpha:" ToolTip="Significance threshold (default: 0.05)" />
                            <TextBox Grid.Column="1" Text="{Binding ResultsViewModel.Alpha, StringFormat=F3}" 
                                     Width="60" HorizontalAlignment="Left" VerticalContentAlignment="Center" Margin="0 0 5 0" />
                            
                            <Label Grid.Column="2" Content="Min Tests:" 
                                   ToolTip="Minimum number of statistical tests a database must pass" />
                            <TextBox Grid.Column="3" Text="{Binding ResultsViewModel.MinTestPassedCount}" 
                                     Width="60" HorizontalAlignment="Left" VerticalContentAlignment="Center" />
                        </Grid>

                        <!-- Use Q-Value Checkbox -->
                        <CheckBox Content="Use Q-Value (FDR-corrected)" Margin="5 4"
                                  IsChecked="{Binding ResultsViewModel.FilterByQValue}"
                                  ToolTip="Use FDR-corrected Q-values instead of raw P-values" />
                    </StackPanel>
                </GroupBox>

                <!-- Database Results List -->
                <GroupBox Header="Database Results" Grid.Row="3" Margin="5 2">
                    <Grid>
                        <TabControl x:Name="ResultsTabControl" Background="White">
                            <TabControl.Resources>
                                <Style TargetType="TabItem">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="TabItem">
                                                <Border x:Name="Border"
                                                        BorderThickness="1,1,1,0"
                                                        BorderBrush="Gainsboro"
                                                        CornerRadius="4,4,0,0"
                                                        Margin="2,0"
                                                        Height="{TemplateBinding Height}">
                                                    <Grid SnapsToDevicePixels="True" UseLayoutRounding="True">
                                                        <StackPanel Orientation="Horizontal"
                                                                    HorizontalAlignment="Center"
                                                                    VerticalAlignment="Center"
                                                                    Margin="10,2">


                                                            <!-- Header Text -->
                                                            <ContentPresenter x:Name="ContentSite"
                                                                              VerticalAlignment="Center"
                                                                              HorizontalAlignment="Center"
                                                                              ContentSource="Header" />
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>

                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Border" Property="Background"
                                                                Value="LightSkyBlue" />
                                                    </Trigger>
                                                    <Trigger Property="IsSelected" Value="False">
                                                        <Setter TargetName="Border" Property="Background"
                                                                Value="{StaticResource BackgroundColor}" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TabControl.Resources>
                            
                            <!-- All Filtered Databases Tab -->
                            <TabItem Header="All Filtered">
                                <DataGrid x:Name="DatabaseResultsDataGrid" 
                                          AutoGenerateColumns="False" 
                                          VerticalAlignment="Stretch" 
                                          ScrollViewer.CanContentScroll="True" 
                                          IsReadOnly="True" 
                                          CanUserDeleteRows="False" 
                                          CanUserAddRows="False" 
                                          SelectionMode="Single"
                                          ItemsSource="{Binding ResultsViewModel.FilteredDatabaseResults}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Organism" Binding="{Binding OrganismName}" Width="*" MinWidth="80" />
                                        <DataGridTextColumn Header="Taxonomy" Binding="{Binding TaxonomyDisplay}" Width="*" MinWidth="80" />
                                        <DataGridTextColumn Header="Sig. Tests" Binding="{Binding StatisticalTestsPassed}" Width="60" 
                                                            ElementStyle="{StaticResource DataGridCenteredCellStyle}" />
                                        <DataGridTextColumn Header="Comb. P" Binding="{Binding CombinedPValue, StringFormat=E2}" Width="70" 
                                                            ElementStyle="{StaticResource DataGridCenteredCellStyle}" />
                                        <DataGridTextColumn Header="Comb. Q" Binding="{Binding CombinedQValue, StringFormat=E2}" Width="70" 
                                                            ElementStyle="{StaticResource DataGridCenteredCellStyle}" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </TabItem>

                            <!-- Top N Results Tab -->
                            <TabItem Header="Top N for Selected Test">
                                <DataGrid x:Name="TopNResultsDataGrid" 
                                          AutoGenerateColumns="False" 
                                          VerticalAlignment="Stretch" 
                                          ScrollViewer.CanContentScroll="True" 
                                          IsReadOnly="True" 
                                          CanUserDeleteRows="False" 
                                          CanUserAddRows="False" 
                                          SelectionMode="Single"
                                          ItemsSource="{Binding ResultsViewModel.CurrentPlot.TopNResults}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Organism" Binding="{Binding OrganismName}" Width="*" MinWidth="80" />
                                        <DataGridTextColumn Header="Taxonomy" Binding="{Binding TaxonomyDisplay}" Width="*" MinWidth="80" />
                                        <DataGridTextColumn Header="P-Value" Binding="{Binding SelectedTestPValue, StringFormat=E2}" Width="70" 
                                                            ElementStyle="{StaticResource DataGridCenteredCellStyle}" />
                                        <DataGridTextColumn Header="Q-Value" Binding="{Binding SelectedTestQValue, StringFormat=E2}" Width="70" 
                                                            ElementStyle="{StaticResource DataGridCenteredCellStyle}" />
                                    </DataGrid.Columns>
                                </DataGrid>
                            </TabItem>
                        </TabControl>

                        <!-- Loading overlay -->
                        <Grid x:Name="LoadOverlay" 
                              Visibility="{Binding IsLoading, Converter={local:BooleanToVisibilityConverter}}"
                              Background="#80000000"
                              Panel.ZIndex="100">
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <ProgressBar IsIndeterminate="True" Width="120" Height="18" Margin="0,0,0,8"/>
                                <TextBlock Text="Loading..." Foreground="White" FontWeight="Bold" FontSize="16" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </Grid>
                </GroupBox>

                <!-- Export Button -->
                <DockPanel Grid.Row="4" LastChildFill="True" HorizontalAlignment="Center" Margin="5">
      
                </DockPanel>
            </Grid>

            <!-- Moveable splitter -->
            <GridSplitter Grid.Column="1" 
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="Silver"
                          Width="3"/>

            <!-- Right Panel: Plot Display -->
            <Grid Grid.Column="2" Name="PlotDisplayGrid" Style="{StaticResource InternalGridStyle}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Plot Selector -->
                <Border Grid.Row="0" BorderBrush="LightGray" BorderThickness="0 0 0 1" Padding="5">
                    <StackPanel Orientation="Horizontal">
                        <Label Content="Plot Type:" VerticalAlignment="Center" FontWeight="SemiBold" />
                        <ComboBox SelectedItem="{Binding ResultsViewModel.CurrentPlotType}"
                                  Width="150" Height="26"
                                  VerticalAlignment="Center"
                                  Margin="5 0"
                                  ToolTip="Select plot visualization type">
                            <ComboBox.Items>
                                <parallelSearch:PlotType>ManhattanPlot</parallelSearch:PlotType>
                                <parallelSearch:PlotType>PhylogeneticTree</parallelSearch:PlotType>
                            </ComboBox.Items>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <local:SettingsButtonControl Grid.Row="1" Height="52" x:Name="SettingsButton"
                                             HorizontalAlignment="Left" VerticalAlignment="Top"
                                             Panel.ZIndex="1" SelectedTabIndex="5" />

                <!-- Plot Display Area with dynamic control switching -->
                <Grid x:Name="PlotDisplayInnerGrid"  Grid.Row="1">
                    <!-- Manhattan Plot Control -->
                    <local:ManhattanPlotControl x:Name="ManhattanPlotControl"
                                                DataContext="{Binding ResultsViewModel.ManhattanPlot}"
                                                Visibility="{Binding DataContext.ResultsViewModel.IsManhattanPlotSelected,
                                          RelativeSource={RelativeSource AncestorType=UserControl},
                                          Converter={local:BooleanToVisibilityConverter}}"
                                                VerticalAlignment="Stretch" Margin="0 0" />

                    <!-- Phylogenetic Tree Control -->
                    <local:PhylogeneticTreeControl x:Name="PhylogeneticTreeControl"
                                              DataContext="{Binding ResultsViewModel.PhylogeneticTree}"
                                              Visibility="{Binding DataContext.ResultsViewModel.IsPhylogeneticTreeSelected,
                                        RelativeSource={RelativeSource AncestorType=UserControl},
                                        Converter={local:BooleanToVisibilityConverter}}"
                                              VerticalAlignment="Stretch" Margin="0 0" />
                </Grid>

                <!-- Status Message -->
                <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="0 1 0 0" Padding="5">
                    <TextBlock Text="{Binding StatusMessage}" 
                               FontStyle="Italic" Foreground="Gray" 
                               TextWrapping="Wrap" />
                </Border>
            </Grid>
        </Grid>
    </DockPanel>
</UserControl>

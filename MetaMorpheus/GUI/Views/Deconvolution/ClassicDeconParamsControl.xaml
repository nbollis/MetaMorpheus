<UserControl x:Class="MetaMorpheusGUI.ClassicDeconParamsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MetaMorpheusGUI"
             xmlns:guiFunctions="clr-namespace:GuiFunctions;assembly=GuiFunctions"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="600">

    <Grid d:DataContext="{x:Static guiFunctions:ClassicDeconParamsModel.Instance}" >

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="Max Assumed Charge State:" Grid.Column="0" Grid.Row="0" />
        <local:IntegerTexBoxControl Grid.Column="1" Grid.Row="0" x:Name="DeconvolutionMaxAssumedChargeStateTextBox"  Width="45" ToolTipService.ShowDuration="999999" ToolTipService.InitialShowDelay="500"
                                    Text="{Binding MaxAssumedChargeState}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" AllowNegative="True">
            <TextBox.ToolTip>
                <TextBlock>
                    The maximum charge state that deconvolution should allow. Minimum is 1 for positive mode and -1 for negative mode. 
                </TextBlock>
            </TextBox.ToolTip>
        </local:IntegerTexBoxControl>

        <Label Content="Min Assumed Charge State:" Grid.Column="2" Grid.Row="0"/>
        <local:IntegerTexBoxControl Grid.Column="3" Grid.Row="0" Width="45" ToolTipService.ShowDuration="999999" ToolTipService.InitialShowDelay="500" HorizontalAlignment="Left"
                                    Text="{Binding MinAssumedChargeState}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" AllowNegative="True">
            <TextBox.ToolTip>
                <TextBlock>
                    The minimum charge state that deconvolution should allow.
                </TextBlock>
            </TextBox.ToolTip>
        </local:IntegerTexBoxControl>

        <Label Content="Deconvolution Tolerance (ppm):" Grid.Column="0" Grid.Row="1" />
        <local:DoubleTextBoxControl Grid.Column="1" Grid.Row="1" x:Name="DeconvolutionTolerancePpmStateTextBox"  Width="45" ToolTipService.ShowDuration="999999" ToolTipService.InitialShowDelay="500" 
                                    Text="{Binding DeconvolutionTolerancePpm}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" >
            <TextBox.ToolTip>
                <TextBlock>

                </TextBlock>
            </TextBox.ToolTip>
        </local:DoubleTextBoxControl>

        <Label Content="Intensity Ratio Limit:" Grid.Column="2" Grid.Row="1"/>
        <local:DoubleTextBoxControl Grid.Column="3" Grid.Row="1" Width="45" ToolTipService.ShowDuration="999999" ToolTipService.InitialShowDelay="500" HorizontalAlignment="Left"
                                    Text="{Binding IntensityRatioLimit}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
            <TextBox.ToolTip>
                <TextBlock>
                    
                </TextBlock>
            </TextBox.ToolTip>
        </local:DoubleTextBoxControl>
    </Grid>
</UserControl>

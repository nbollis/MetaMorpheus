<UserControl x:Class="MetaMorpheusGUI.MassDifferenceAcceptorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MetaMorpheusGUI"
             xmlns:guiFunctions="clr-namespace:GuiFunctions;assembly=GuiFunctions"
             mc:Ignorable="d" 
             d:DesignHeight="180" d:DesignWidth="800">
    <UserControl.Resources>
        <local:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
        <local:MassDifferenceAcceptorTypeToContentTextConverter x:Key="MassDifferenceAcceptorTypeToContentTextConverter" />
        <local:MassDifferenceAcceptorTypeToToolTipConverter x:Key="MassDifferenceAcceptorTypeToToolTipConverter" />
        <local:MassDifferenceAcceptorTypeToCustomTextBoxVisibilityConverter x:Key="MassDifferenceAcceptorTypeToCustomTextBoxVisibilityConverter" />

        <!-- Style GroupBoxes -->
        <Style TargetType="GroupBox">
            <Setter Property="BorderThickness" Value="3 1 1 1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderBrush" Value="DarkSlateGray"/>
            <Setter Property="HeaderTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Foreground="Black" FontWeight="Bold"/>
                    </DataTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Grid d:DataContext="{x:Static guiFunctions:MassDifferenceAcceptorModel.Instance}" Background="{StaticResource BackgroundColor}">
        <GroupBox Header="Mass Difference Acceptor Criterion">
            <StackPanel Margin="0">
                <ItemsControl ItemsSource="{Binding MassDiffAcceptorTypes}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <RadioButton GroupName="MassDiffAcceptor"
                                         Content="{Binding  Converter={StaticResource MassDifferenceAcceptorTypeToContentTextConverter},
                                                        ConverterParameter={Binding}}"
                                         IsChecked="{Binding Converter={StaticResource EnumToBooleanConverter},
                                                        ConverterParameter={Binding}}"
                                         ToolTip="{Binding Converter={StaticResource MassDifferenceAcceptorTypeToToolTipConverter},
                                                        ConverterParameter={Binding}}"
                                         ToolTipService.ShowDuration="999999" ToolTipService.InitialShowDelay="500">
                            </RadioButton>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <TextBox Text="{Binding CustomText}" 
                         Visibility="{Binding SelectedType, Converter={StaticResource MassDifferenceAcceptorTypeToCustomTextBoxVisibilityConverter}}"
                         ToolTip="A custom mass difference acceptor may be specified in multiple ways:&#x0a;* To accept a custom (other than the interval corresponding to the precursor tolerance) interval around zero daltons, specify a custom name, followed by &quot;ppmAroundZero&quot; or &quot;daltonsAroundZero&quot;, followed by the numeric value corresponding to the interval width. Examples:&#x0a;  * CustomPpmInterval ppmAroundZero 5&#x0a;  * CustomDaltonInterval daltonsAroundZero 2.1 &#x0a;&#x0a;* To accept a variety of pre-specified mass differences, use a custom name, followed by &quot;dot&quot;, followed by a custom bin width, followed by comma separated acceptable mass differences. Examples:&#x0a;  * CustomMissedIsotopePeaks dot 5 ppm 0,1.0029,2.0052&#x0a;  * CustomOxidationAllowed dot 0.1 da 0,16&#x0a;&#x0a;* To accept mass differences in pre-specified dalton intervals, use a custom name, followed by &quot;interval&quot;, followed by comma separated mass intervals in brackets. Example:&#x0a;  * CustomPositiveIntervalAcceptror interval [0,200]" />
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
